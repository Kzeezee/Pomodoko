{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pomodoko",
  "version": "0.1.1",
  "identifier": "com.kez.pomodoko",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Pomodoko",
        "width": 400,
        "height": 330,
        "minWidth": 400,
        "minHeight": 330,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
